<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="net.boxware.qiklight" version="1.0.0b">

	<name>QikLight</name>

	<description>
		A super sic app that makes you noticable in even the most
		darkest of places
	</description>

	<author href="http://www.boxware.net" email="qiklight@boxware.net">
		Boxware, LLC
	</author>

	<!-- <icon src="icon.png" gap:role="default" /> -->

	<preference name="orientation" value="both" />
	<preference name="show-splash-screen-spinner" value="false" />
	<preference name="permissions" value="none" />



	<icon src="icons/ios/regular.png" width="57" height="57" />
	<icon src="icons/ios/ipad.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/ios/retina.png" width="114" height="114" />

	<icon src="icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
</widget>